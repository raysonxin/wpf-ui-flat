<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="BlackColor">#FF272727</Color>
    <Color x:Key="WhiteColor">#FFFFFFFF</Color>
    
    <Color x:Key="ThemeColorR1">#FF272727</Color>
    <Color x:Key="ThemeColorR2">#FF3C3C3C</Color>
    <Color x:Key="ThemeColorR3">#FF4F4F4F</Color>
    
    <Color x:Key="GrayHover">#FFADADAD</Color>
    <Color x:Key="GrayPressed">#FF6C6C6C</Color>
    
    <Color x:Key="ThemeColor">#FF0066CC</Color>
    <Color x:Key="InverseColor">#FFdedede</Color>
    <Color x:Key="AccentColor">#cc4b4b4b</Color>
    
    <Color x:Key="ForegroundColor">#FFFFFFFF</Color>
    
    <SolidColorBrush x:Key="InverseSolidBrush" Color="{DynamicResource InverseColor}"/>
    <SolidColorBrush x:Key="ThemeSolidBrush" Color="{DynamicResource ThemeColor}"/>
    <SolidColorBrush x:Key="AccentSolidBrush" Color="{DynamicResource AccentColor}"/>
    <SolidColorBrush x:Key="ForegroundSolidBrush" Color="{DynamicResource ForegroundColor}"/>
</ResourceDictionary>